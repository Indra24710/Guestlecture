<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddLecture"
    android:background="@drawable/add_lecture_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/professor_lecture"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#F8FFFFFF"
                android:hint="What is the professor name?" />

            <EditText
                android:id="@+id/lecture_lecture"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#FCFFFFFF"
                android:hint="  Name of lecture?" />

            <EditText
                android:id="@+id/date_lecture"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#FFFFFF"
                android:hint="  Date of lecture" />

            <EditText
                android:id="@+id/time_lecture"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#F3FFFFFF"
                android:hint="  Time of lecture" />

            <EditText
                android:id="@+id/venue_lecture"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#F2FFFFFF"
                android:hint="  Venue of lecture?" />

            <EditText
                android:id="@+id/details_lecture"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#FFFFFF"
                android:hint="  Can you give a short idea of the lecture." />

            <EditText
                android:id="@+id/area_lecture"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#FFFFFF"
                android:hint="Area or Domain" />

            <Button
                android:id="@+id/Addlecture"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="20dp"
                android:background="@drawable/search_button"
                android:backgroundTint="#00CDD4"
                android:text="ADD LECTURE" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>