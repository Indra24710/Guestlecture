<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        >

        <ImageView
            android:id="@+id/lecture_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/guest"
            android:scaleType="centerCrop"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/profilecard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/lecture_image"
            >

            <ImageView
                android:id="@+id/profilephoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/logo" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/advent_pro_bold"
            android:padding="20dp"
            android:text="Topic"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lecturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subject"

            android:padding="20dp"
            android:text="Lecturer"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/lecturer"
            android:padding="20dp"
            android:textColor="@android:color/black"
            android:text="Date "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:padding="20dp"

            android:text="Time "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Venue"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:padding="20dp"
            android:textColor="@android:color/black"
            android:text="Venue "
            android:textStyle="bold" />

        <Button
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Venue"
            android:layout_centerInParent="true"
            android:background="@color/design_default_color_primary_dark"
            android:elevation="10dp"
            android:text="Book a seat"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/locate_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            android:text="Locate venue"
            android:textAllCaps="false"
            app:cornerRadius="20dp" />
    </RelativeLayout>
</LinearLayout>