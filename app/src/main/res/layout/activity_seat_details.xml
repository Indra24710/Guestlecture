<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatDetails"
    android:background="@drawable/seat_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:fontFamily="@font/roboto_mono"
                android:text="Student Details"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="italic|bold" />
            <EditText
                android:id="@+id/person_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#F8FFFFFF"
                android:hint="   Name" />

            <EditText
                android:id="@+id/roll_num"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/register_activity"
                android:backgroundTint="#FCFFFFFF"
                android:hint="  Roll Number" />



            <Button
                android:id="@+id/confirm_seat"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_margin="20dp"
                android:background="@drawable/search_button"
                android:backgroundTint="#00CDD4"
                android:text="Confirm Seat" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>